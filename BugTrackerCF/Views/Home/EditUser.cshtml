@model BugTrackerCF.Models.AdminUserViewModel 
@{
    ViewBag.Title = "EditUser";
}

<h2>EditUser @Model.User.DisplayName</h2>

<form action="EditUser" method="Post" class="form-horizontal">
    @Html.HiddenFor(m => m.User.Id, new { })
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-9">
            @Html.ListBox("SelectedRoles", Model.Roles)
            
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-9">
            <button type="submit" class="btn-u btn-u-green">Assign Roles</button>
        </div>
    </div>
</form>